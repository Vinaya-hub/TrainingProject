<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/strip"
    android:paddingLeft="3dip"
    android:paddingRight="3dip">

    <ImageView
        android:id="@+id/dl_image_main"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" 
        android:layout_marginLeft="2dip">
    </ImageView>
    
    <!-- <LinearLayout android:layout_width="wrap_content" -->
    <!-- android:id="@+id/dl_image_icon_layout" -->
    <!-- android:layout_alignParentRight="true" android:layout_alignParentBottom="true" -->
    <!-- android:paddingBottom="8px" android:layout_height="wrap_content"> -->
    <!-- <ImageView android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" android:id="@+id/dl_image_icon" -->
    <!-- android:background="@drawable/green_leaf" /> -->
    <!-- </LinearLayout> -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/dl_image_main"
        android:orientation="vertical"
        android:paddingLeft="2px" >

        <TextView
            android:id="@+id/dl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6px"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#800517"
            android:textSize="15px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dl_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating:"
                android:textColor="#437C17"
                android:textSize="12px"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dl_image_rating"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:background="@drawable/icon_rating" />

            <TextView
                android:id="@+id/dl_reviews_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="77"
                android:textColor="#717D7D"
                android:textSize="12px" />
        </LinearLayout>
        <!--
        <RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="2px">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Reviews: "
				android:textSize="12px" android:textColor="#437C17"
				android:textStyle="bold" android:id="@+id/dl_reviews" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="#717D7D"
				android:textSize="12px" android:lines="1" android:text="77"
				android:layout_toRightOf="@id/dl_reviews" android:id="@+id/dl_reviews_data" />
		</RelativeLayout>
        -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px" >

            <TextView
                android:id="@+id/dl_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: "
                android:textColor="#437C17"
                android:textSize="12px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dl_distance_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dl_distance"
                android:lines="1"
                android:textColor="#717D7D"
                android:textSize="12px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3px"
            android:layout_marginTop="2px" >

            <TextView
                android:id="@+id/dl_address_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="36px"
                android:layout_toRightOf="@id/dl_distance"
                android:lines="2"
                android:text="Hi this test from application "
                android:textColor="#717D7D"
                android:textSize="12px" />

            <ImageView
                android:id="@+id/dl_image_icon"
                android:layout_width="22dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3px"
                android:background="@drawable/green_leaf" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>