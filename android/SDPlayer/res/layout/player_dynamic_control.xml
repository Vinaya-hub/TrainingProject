<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:background="@drawable/alpha_over"
>
	<LinearLayout
	android:orientation="horizontal"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="5dip"
	>
		<ImageView
			android:id="@+id/loop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/music_play_menu_rep_1_off"
			android:onClick="onLoopClicked"
		/>
		
		<LinearLayout
			android:id="@+id/info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_gravity="center"
		>
			<TextView
			android:id="@+id/song_position"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="12/120"
			android:textSize="13dip"
			android:textColor="#ffffff"
			android:layout_gravity="center"
			/>
		</LinearLayout>
		
		<ImageView
			android:id="@+id/shuffle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/music_play_menu_shuffle_off"
			android:onClick="onShuffleClicked"
		/>
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/rating"
		android:layout_gravity="center"
	>
	<ImageView
		android:layout_width="120dip"
		android:layout_height="22dip"
		android:id="@+id/rattingStart"
		android:background="@drawable/music_play_rating5"
		android:layout_gravity="center"
	/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/time"
	>
		<TextView
				android:layout_marginLeft="5dip"
				android:id="@+id/elapse"
				android:layout_width="50dip"
				android:layout_height="wrap_content"
				android:text="0:00"
				android:textStyle="bold"
				android:textColor="#FFFFFFFF"
				/>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
		/>
		<TextView
				android:id="@+id/remain"
				android:layout_height="wrap_content"
				android:layout_width="50dip"
				android:text="-5:00"
				android:textStyle="bold"
				android:textColor="#FFFFFFFF"
				android:gravity="right"
				android:layout_marginRight="5dip"
				/>
	</LinearLayout>
	<SeekBar
				android:id="@+id/seek_bar_progress"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:progressDrawable="@drawable/play_bar"
				android:thumb="@drawable/music_play_progress_tub"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:layout_marginBottom="5dip"
				android:layout_marginRight="3dip"
				android:layout_marginLeft="3dip"/>
</LinearLayout>
