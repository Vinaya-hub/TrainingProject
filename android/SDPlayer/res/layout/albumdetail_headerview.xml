<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/albumdetail_header" android:layout_width="fill_parent"
	android:layout_height="110dip">
	<gnt.sd.view.SDAlbumCoverArt android:id="@+id/albumdetail_coverart"
		android:layout_width="80dip" android:layout_height="80dip"
		android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_toRightOf="@id/albumdetail_coverart">
		<TextView android:id="@+id/albumdetail_title"
			android:layout_width="200dip" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:text="" android:singleLine="true"
			android:layout_centerVertical="true" android:ellipsize="end"
			android:textColor="#ffffff" />
		<TextView android:id="@+id/albumdetail_artist"
			android:layout_width="200dip" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:text="" android:singleLine="true"
			android:layout_centerVertical="true" android:ellipsize="end"
			android:textColor="#888888" android:textSize="12dip" />
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="50dip" android:background="@drawable/headerbutton_selector"
			android:layout_marginLeft="10dip" android:clickable="true" android:paddingTop="5dip">
			<ProgressBar android:id="@+id/albumdetail_loadreview"
				android:layout_width="40dip" android:layout_height="40dip"
				android:layout_marginLeft="4dip" />
			<TextView android:id="@+id/albumdetail_review"
				android:layout_width="200dip" android:layout_height="wrap_content"
				android:layout_marginLeft="4dip" android:text="" android:lines="3"
				android:textColor="#ffffff" android:textSize="10dip" />
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>