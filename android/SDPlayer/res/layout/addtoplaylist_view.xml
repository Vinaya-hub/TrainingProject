<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#000000">
	<RelativeLayout android:id="@+id/addtoplaylist_buttonSelectAll"
		android:background="@drawable/list_create_bg" android:layout_width="fill_parent"
		android:layout_height="80dip" android:clickable="true">
		<ImageView android:id="@+id/addtoplaylist_addbutton" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="5dip"
			android:layout_alignParentLeft="true" android:layout_centerVertical="true"
			android:background="@drawable/btn_create_ss" />
		<TextView android:layout_width="200dip"
			android:layout_height="wrap_content" android:layout_marginLeft="5dip"
			android:text="Create playlist" android:layout_toRightOf="@id/addtoplaylist_addbutton"
			android:layout_centerVertical="true" android:textColor="#ffffff"
			android:textSize="20dip" />
	</RelativeLayout>
	<ListView android:id="@+id/addtoplaylist_listview"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:cacheColorHint="#00000000" android:divider="@layout/list_divider"
		android:dividerHeight="2dip" android:layout_below="@id/addtoplaylist_buttonSelectAll">
	</ListView>
</RelativeLayout>